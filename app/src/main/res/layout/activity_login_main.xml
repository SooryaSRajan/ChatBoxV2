<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:text="Sign In"
        android:textSize="60sp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/log_in_sub_comment"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/user_email_sign_in"
        android:id="@+id/log_in_sub_comment"
        android:text="@string/sign_up_message"
        android:layout_marginBottom="80dp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/user_name_error_sign_in"
        android:textColor="@color/colorRed"
        android:layout_marginEnd="40dp"
        android:textSize="17sp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:textAllCaps="true"
        android:id="@+id/user_email_sign_in"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/colorGrey"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_centerInParent="true"
        android:hint="Enter User Name..."
        android:textColor="@color/colorWhite"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:textAllCaps="true"
        android:id="@+id/user_password_sign_in"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_below="@+id/user_email_sign_in"
        android:textColorHint="@color/colorGrey"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:hint="Enter User Name..."
        android:textColor="@color/colorWhite"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/sign_in_button"
        android:padding="10dp"
        android:text="Sign In"
        android:layout_below="@+id/user_password_sign_in"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>


</RelativeLayout>