<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:text="@string/sign_up"
        android:textSize="60sp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/sign_up_sub_comment"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_name_sign_up"
        android:layout_centerHorizontal="true"
        android:id="@+id/sign_up_sub_comment"
        android:text="@string/sign_up_message"
        android:layout_marginBottom="80dp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/user_name_error_sign_up"
        android:textColor="@color/colorRed"
        android:layout_above="@+id/user_name_sign_up"
        android:layout_marginEnd="40dp"
        android:textSize="17sp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:textAllCaps="true"
        android:id="@+id/user_name_sign_up"
        android:layout_width="match_parent"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:textColorHint="@color/colorGrey"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:hint="Enter User Name..."
        android:textColor="@color/colorWhite"
        android:layout_marginRight="40dp"
        android:layout_above="@+id/email_id"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/email_error_sign_up"
        android:layout_width="wrap_content"
        android:textColor="@color/colorRed"
        android:textSize="17sp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/email_id"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email_id"
        android:hint="Enter Email ID"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/colorGrey"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"/>


    <TextView
        android:id="@+id/password_one_error_sign_up"
        android:textColor="@color/colorRed"
        android:layout_above="@+id/password_create_one"
        android:layout_marginEnd="40dp"
        android:textSize="17sp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/password_create_one"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textColorHint="@color/colorGrey"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:inputType="textPassword"
        android:hint="Enter Password..."
        android:textColor="@color/colorWhite"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/email_id"
        android:layout_marginBottom="40dp"/>


    <TextView
        android:id="@+id/password_two_error_sign_up"
        android:layout_marginEnd="40dp"
        android:textSize="17sp"
        android:textColor="@color/colorRed"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/password_create_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/password_create_two"
        android:padding="10dp"
        android:textColorHint="@color/colorGrey"
        android:hint="Enter Password Again..."
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_create_one"
        android:layout_marginBottom="40dp"/>

    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/sign_up_create_button"
        android:padding="10dp"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_create_two"
        android:layout_marginBottom="40dp"/>


</RelativeLayout>